    <script>
        var isHTMLDebug = false;
        var viewer;
        var stinuum;
        //var labelEntity;
        var handler;
        var slider;
        var label_timeout;
        var current_layer;
        var toolbar_show = true;
        var div_id = {
            'graph': 'graph',
            "radar": 'radar',
            "option": "option",
            "mfjson": "mfjson",
            "editor": "editor",
